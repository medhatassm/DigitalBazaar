@model IEnumerable<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>
                Category Title
            </th>
            <th>
                Items Count
            </th>
            <th>
                Priority
            </th>
            <th>
                Created Date
            </th>
            <th>
                Updated Date
            </th>
            <th>
                Is Active
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @* Using C# Code By Add @ Symbole Before Coding *@
        @foreach (var category in Model.OrderBy(x => x.Priority))
        {
            <tr>
                <td>@category.Title</td>
                <td>@category.Count</td>
                <td>@category.Priority</td>
                <td>@category.CreatedDate</td>
                <td>@category.UpdatedDate</td>
                <td>@category.IsActive</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning rounded mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger rounded mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>